{

  "manifest_version": 2,
  "name": "Canonical",
  "author": "Bryan Hadaway",
  "homepage_url": "https://github.com/bhadaway/canonical",
  "version": "1.1",

  "description": "Allows you to quickly redirect to the canonical version of the URL you're on, if available.",

  "icons": {
    "16": "icons/blue/16.png",
    "32": "icons/blue/32.png",
    "96": "icons/blue/96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [{
    "matches": ["*://*/*"],
    "run_at": "document_start",
    "js": ["canonical.js"]
  }],

  "background": {
    "persistent": false,
    "scripts":[
      "background.js"
    ]
  },

  "page_action": {}

}
